<!--components/music/index.wxml-->
<view hidden="{{hidden}}" class="musicContainer">
    <image src="{{img}}" class="classic-img {{playing?'rotation':''}}" />
    <image class="player-img" bind:tap="onPlay" src="{{playing?waitingSrc:playingSrc}}" />
    <image class="tag" src="images/music@tag.png" />
    <text class="content">{{content}}</text>
</view>